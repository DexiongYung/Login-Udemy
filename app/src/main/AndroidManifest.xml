<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.bignerdranch.android.udemy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Infrastructure.UdemyApplication"> //if there is a dot at the beginning it just appends it to package

        <activity android:name="com.buzz.udemy.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.buzz.udemy.activities.LoginActivity"/>

        <activity android:name="com.buzz.udemy.activities.LoginNarrowActivity"/>

        <activity android:name="com.buzz.udemy.activities.RegisterActivity" />
        
        <activity android:name="com.buzz.udemy.activities.ExternalLoginActivity"/>
    </application>

</manifest>
